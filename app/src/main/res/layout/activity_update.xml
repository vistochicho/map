<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#DEECF0"
    tools:context=".UpdateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/upeditname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Availability"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/upeditava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Phone Number"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/upeditpho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Details"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/upeditdet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/getCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center"
        android:background="@drawable/radius_button"
        android:textColor="@color/white"
        android:text="Get Current Location"
        android:elevation="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Latitude"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/uptextLat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Longitude"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/uptextLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/updateButton"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="Update Map"
        android:elevation="20dp"
        android:background="@drawable/radius_button"
        android:layout_gravity="center"
        android:gravity="center"/>




</LinearLayout>